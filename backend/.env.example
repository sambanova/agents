# OAuth Connector Configuration

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/connectors/google/callback

# Slack OAuth (Future)
SLACK_OAUTH_CLIENT_ID=your_slack_client_id_here
SLACK_OAUTH_CLIENT_SECRET=your_slack_client_secret_here
SLACK_OAUTH_REDIRECT_URI=http://localhost:8000/api/connectors/slack/callback

# MCP (Model Context Protocol) Connectors
# MCP servers handle their own OAuth - just provide the server URL

# Atlassian MCP Server (Jira & Confluence)
# Note: Atlassian's MCP server requires OAuth app registration
# You need to register an app at https://developer.atlassian.com/console/myapps/
# and get client_id and client_secret

# Option 1: Official Atlassian Remote MCP Server (requires OAuth app)
ATLASSIAN_MCP_SERVER_URL=https://mcp.atlassian.com/v1/sse
ATLASSIAN_CLIENT_ID=your_atlassian_oauth_app_client_id
ATLASSIAN_CLIENT_SECRET=your_atlassian_oauth_app_client_secret
ATLASSIAN_OAUTH_REDIRECT_URI=http://localhost:8000/connectors/atlassian/callback

# Option 2: Community MCP server (github.com/sooperset/mcp-atlassian)
# This can be run locally or deployed, supports PAT tokens
# ATLASSIAN_MCP_SERVER_URL=http://localhost:9000/sse

# Add more MCP servers as needed
# Users can also add custom MCP servers through the UI

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Redis Master Salt for encryption (if not already set)
REDIS_MASTER_SALT=your_base64_encoded_salt_here

# Admin Panel Configuration
# Set to true to enable the admin panel for LLM provider configuration
# When false (default), the system uses default SambaNova configuration
# Must also set VITE_SHOW_ADMIN_PANEL=true in frontend .env
SHOW_ADMIN_PANEL=false

# Optional: MLflow Configuration
MLFLOW_TRACKING_ENABLED=false
MLFLOW_TRACKING_URI=http://localhost:5000

# Optional: Environment
ENVIRONMENT=dev

# Note: LLM API keys are NOT stored in environment variables
# They are passed dynamically from the frontend for security
# Each user provides their own API keys